@import "post-item/post-item-template.wxss";

.txettip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  margin: 0 auto;
  color: #576b95;
}

.loading{  
  padding: 10rpx;  
  text-align: center;
  color: #C0C0C0;
}  
.loading2{
  position:absolute;
  top:46%; 
  width: 100%;
  align-items:stretch;
  padding: 10rpx;  
  text-align: center;
  color: #C0C0C0;
} 
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  /* background: url(../../images/icon-loading.png) no-repeat;   */
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
} 

/* 详情框的样式 */
.detail{
  position:absolute;
  top: 150rpx;
  right: 75rpx;
  display: flex;
  flex-direction: column;
  width: 600rpx;
  height: 700rpx;
  margin: 0 auto;
  border: solid 2rpx #ccc;
  background-color: #f5f5f5;
}

.detail_title{
  border-bottom: solid 2rpx #ccc;
  text-align: center;
  line-height: 52rpx
}


.order_num{
margin-top: 30rpx;
margin-left: 30rpx;
font-weight: bold;
}

.order_num text{
  font-size: 36rpx;
}

.detail_entry{
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  color: #333333
}

.back{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 400rpx;
}
